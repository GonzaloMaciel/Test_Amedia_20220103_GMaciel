@model Test_Amedia_20220103_GMaciel.Models.TUser

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 my-3 border">
    <h1> @ViewBag.PageName</h1>

    <div class="row">
        <div class="col-sm-6">
            <hr />
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (@ViewBag.IsEdit)
                {
                    <input type="hidden" asp-for="CodUsuario" />
                }
                <div class="form-group">
                    <label asp-for="TxtUser" class="control-label"></label>
                    <input asp-for="TxtUser" class="form-control" />
                    <span asp-validation-for="TxtUser" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TxtPassword" class="control-label"></label>
                    <input asp-for="TxtPassword" class="form-control" />
                    <span asp-validation-for="TxtPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TxtNombre" class="control-label"></label>
                    <input asp-for="TxtNombre" class="form-control" />
                    <span asp-validation-for="TxtNombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TxtApellido" class="control-label"></label>
                    <input asp-for="TxtApellido" class="form-control" />
                    <span asp-validation-for="TxtApellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NroDoc" class="control-label"></label>
                    <input asp-for="NroDoc" class="form-control" />
                    <span asp-validation-for="NroDoc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CodRol" class="control-label"></label>
                    <input asp-for="CodRol" class="form-control" />
                    <span asp-validation-for="CodRol" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SnActivo" class="control-label"></label>
                    <input asp-for="SnActivo" class="form-control" />
                    <span asp-validation-for="SnActivo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Save" />
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
